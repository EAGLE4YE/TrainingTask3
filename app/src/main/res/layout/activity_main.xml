<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:background="@drawable/blur_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/logo_background"
            android:layout_gravity="center"
            android:tint="@color/white"
            android:src="@drawable/nabdh"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:maxHeight="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="@string/descriptionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="3"
        android:padding="4dp"
        android:text="@string/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textStyle="bold"
            android:padding="4dp"
            android:text="@string/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:padding="4dp"
            android:text="@string/emailDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textStyle="bold"
            android:padding="4dp"
            android:text="@string/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:padding="4dp"
            android:text="@string/addressDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/facebookIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/dashes_borders_circle"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/facbook_icon" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/instegramIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/dashes_borders_circle"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/instagram_icon" />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/youtubeIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/dashes_borders_circle"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/youtube_icon" />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/linkedinIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/dashes_borders_circle"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/linkedin_icon"
            />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/twitterIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/dashes_borders_circle"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/twitter_icon"
            />
    </LinearLayout>
</LinearLayout>


</ScrollView>











